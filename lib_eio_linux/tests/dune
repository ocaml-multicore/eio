(executable
 (name test)
 (enabled_if (= %{system} "linux"))
 (modules test)
 (libraries alcotest eio_linux))

(rule
 (alias runtest)
 (deps ./test.exe)
 (enabled_if (= %{system} "linux"))
 (action (run ./test.exe)))
